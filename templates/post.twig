{% extends 'base.twig' %}

{% block content %}
    <div class="container">
        {% if post.image_path is not null %}
            <img src="{{ post.image_path|escape }}" class="img-fluid" alt="...">
        {% endif %}
        <h1 class="mt-3 mb-3">{{ post.title|escape }}</h1>
        <div class="container mb-3">
            <div class="row">
                <div class="text-muted">bodik2836 | {{ post.published_date|date('F d, Y') }}</div>
            </div>
        </div>
        <div>
            {{ post.content|raw }}
        </div>
    </div>
{% endblock %}