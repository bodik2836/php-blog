{% for post in posts %}
    <div class="row mb-2 bg-light" style="border: 1px solid #ddd;">
        <div class="p-3">
            {% if post.image_path is not null %}
                <img src="{{ asset_url(post.image_path)|escape }}" class="card-img-top" alt="...">
            {% endif %}
            <div class="mt-3">
                <a href="{{ url(post.url_key) }}"><h5 class="card-title">{{ post.title|escape }}</h5></a>
                <div class="text-muted">bodik2836 | {{ post.published_date|date('F d, Y') }}</div>
                <p class="mt-2">{{ post.description|escape }}</p>
                <a href="{{ url(post.url_key) }}">Read more</a>
            </div>
        </div>
    </div>
{% endfor %}