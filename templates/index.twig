{% extends 'base.twig' %}

{% block content %}
<div class="container">
    <h3 class="mb-3 mt-3">Latest posts</h3>
    <div class="row">
        <div class="col-md-9">
            {% for post in posts %}
                <div class="row mb-2 bg-light" style="border: 1px solid #ddd;">
                    <div class="p-3">
                        {% if post.image_path is not null %}
                            <img src="{{ post.image_path|escape }}" class="card-img-top" alt="...">
                        {% endif %}
                        <div class="mt-3">
                            <h5 class="card-title">{{ post.title|escape }}</h5>
                            <div class="text-muted">bodik2836 | {{ post.published_date|date('F d, Y') }}</div>
                            <p class="mt-2">{{ post.description|escape }}</p>
                            <a href="{{ post.url_key }}" class="btn btn-primary">Read more</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="row">
                <a href="/blog">View all</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="container">
                <h4>About</h4>
                <p>Hello, my name is Bohdan Tarasiuk. I'm a student and programmer.</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}